<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学号"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etupdatano"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textSize="30sp"
            android:id="@+id/textView3"
            android:layout_below="@+id/etupdatano"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etupdataname"
            android:layout_below="@+id/etupdatano"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业"
            android:textSize="30sp"
            android:id="@+id/textView4"
            android:layout_below="@+id/etupdataname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etupdatamajor"
            android:layout_below="@+id/etupdataname"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:textSize="30sp"
            android:id="@+id/textView5"
            android:layout_below="@+id/etupdatamajor"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etupdataclass"
            android:layout_below="@+id/etupdatamajor"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="30sp"
            android:id="@+id/textView6"
            android:layout_below="@+id/etupdataclass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etupdatamobile"
            android:layout_below="@+id/etupdataclass"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"/>

    <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="修改"
            android:id="@+id/update"
            android:layout_below="@+id/etupdatamobile"
            android:layout_alignRight="@+id/etupdatamobile"
            android:layout_alignEnd="@+id/etupdatamobile"
            android:onClick="onClick"/>
</RelativeLayout>

